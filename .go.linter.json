{
  "rules": {
    "constant_naming": {
      "pattern": "^[A-Z][A-Z0-9_]*$",
      "description": "Constants should be UPPER_CASE with underscores"
    },
    "file_naming": {
      "pattern": "^[a-z][a-z0-9_]*\\.go$",
      "description": "File names should be lowercase with underscores",
      "exceptions": [
        "main.go",
        "go.mod",
        "go.sum"
      ]
    },
    "folder_naming": {
      "pattern": "^[a-z][a-z0-9_]*$",
      "description": "Folder names should be lowercase with underscores",
      "exceptions": [
        ".git",
        ".github",
        "node_modules",
        "internal",
        "."
      ]
    },
    "function_naming": {
      "pattern": "^[A-Za-z][a-zA-Z0-9]*$",
      "description": "Functions should be PascalCase (exported) or camelCase (unexported)",
      "exceptions": [
        "main",
        "init"
      ]
    },
    "handler_naming": {
      "pattern": "^[A-Z][a-zA-Z0-9]*Handler$",
      "description": "Handlers should be PascalCase and end with 'Handler'",
      "suffix": "Handler"
    },
    "interface_naming": {
      "pattern": "^[A-Z][a-zA-Z0-9]*er$",
      "description": "Interfaces should be PascalCase and typically end with 'er'",
      "suffix": "er"
    },
    "struct_naming": {
      "pattern": "^[A-Z][a-zA-Z0-9]*$",
      "description": "Struct names should be PascalCase"
    },
    "variable_naming": {
      "pattern": "^[a-z][a-zA-Z0-9]*$",
      "description": "Variables should use camelCase",
      "exceptions": [
        "i",
        "j",
        "k",
        "id",
        "db",
        "ok",
        "err",
        "_"
      ]
    }
  },
  "exclusions": {
    "folders": [
      "vendor",
      ".git",
      "node_modules",
      "dist",
      "build",
      "third_party",
      "docs"
    ],
    "files": [
      "*.pb.go",
      "*.gen.go",
      "*_test.go",
      "*_mock.go",
      "*_fixture.go"
    ]
  }
}